<% include header %>
<div class="row">
    <div class="col-md-6 mt-4 text-center">
        <table class="table table-striped table-bordered">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Edad</th>
                <th>Teléfono</th>
                <th>Ciudad</th>
                <th>EPS</th>
                <th>Acción</th>
            </tr>
            <% for (var i = 0; i < crud.length; i ++) { %>
            <tr>
                <td>
                    <%= crud[i].id_usuario %>
                </td>
                <td>
                    <%= crud[i].nombre %>
                </td>
                <td>
                    <%= crud[i].edad %>
                </td>
                <td>
                    <%= crud[i].telefono %>
                </td>
                <td>
                    <%= crud[i].ciudad %>
                </td>
                <td>
                    <%= crud[i].eps %>
                </td>

                <td>
                    <a href="/crud/delete/<%= crud[i].id_usuario %>" class="btn btn-danger">Eliminar</a>
                    <a href="/crud/update/<%= crud[i].id_usuario %>" class="btn btn-info">Editar</a>

                </td>
            </tr>

            <% } %>
        </table>
    </div>
    <div class="col-md-6 mt-4 card">
        <form class="card-body" action="/crud/add" method="post">
            <h3 class="card-title">Crear usuarios</h3>
            <div class="form-group">
                <input name="nombre" type="text" class="form-control" placeholder="nombre de usuario">
            </div>
            <div class="form-group">
                <input name="edad" type="text" class="form-control" placeholder="edad">
            </div>
            <div class="form-group">
                <input name="telefono" type="text" class="form-control" placeholder="teléfono">
            </div>
            <div class="form-group">
                <input name="ciudad" type="text" class="form-control" placeholder="ciudad">
            </div>
            <div class="form-group">
                <input name="eps" type="text" class="form-control" placeholder="eps">
            </div>
            <button type="submit" class="btn btn-primary">Crear</button>
        </form>
    </div>
</div>
<% include footer %>